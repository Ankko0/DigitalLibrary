<Window x:Class="DigitalLibrary.Interface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DigitalLibrary.Interface"
        xmlns:viewmodel="clr-namespace:DigitalLibrary.Interface.VievModel"
        mc:Ignorable="d"
        Title="Digital Library" Height="498" Width="794">
    <Grid>
        <Grid.DataContext>
            <viewmodel:LibraryViewModel/>
        </Grid.DataContext>
        
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="447" Margin="10,10,0,0" VerticalAlignment="Top" Width="766">
            <TabItem Header="Список книг">
                <Grid Background="#FFE5E5E5" >
                    <DataGrid x:Name="dataGrid" AutoGenerateColumns="True" HorizontalAlignment="Left" Height="399" Margin="0,10,0,0" ItemsSource="{Binding libraryEntities}" VerticalAlignment="Top" Width="760"/>
                    
                   
                </Grid>
            </TabItem>
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>


    </Grid>
</Window>
